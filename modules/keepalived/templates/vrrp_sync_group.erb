vrrp_sync_group <%= @name %> {
  group {
  <% @members.each do |member| %><%= member %>
    <% end %>
  }

  <% if @notify_master %>
      notify_master "<%= @notify_master %>"
  <% end %>

  <% if @notify_backup %>
      notify_backup "<%= @notify_backup %>"
  <% end %>

  <% if @notify_fault %>
      notify_fault "<%= @notify_fault %>"
  <% end %>



}
